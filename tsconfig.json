{
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": false,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "strict": true,
        "noLib": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSources": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "removeComments": true,
        "baseUrl": ".",
        "outDir": "./dist/",
        "paths": {
            "@routes": [
                "src/routes"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@clients/*": [
                "src/clients/*"
            ],
            "@apis": [
                "src/apis"
            ],
            "@apis/*": [
                "src/apis/*"
            ],
            "@helpers": [
                "src/helpers"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}